<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MealRandomizer.App">
    <Application.Resources>
        <Color x:Key="LightRed">#CF6679</Color>
        <Color x:Key="DiamondGreen">#26A69A</Color>
        <Color x:Key="DiamondGreenHalfOpacity">#5026A69A</Color>
        <Color x:Key="Primary">#212121</Color>
        <Color x:Key="PrimaryDark">#121212</Color>
        <Style TargetType="Page" ApplyToDerivedTypes="True">
            <Setter Property="BackgroundColor" Value="Black"/>
        </Style>
        <Style TargetType="ActivityIndicator">
            <Setter Property="IsRunning" Value="True"/>
            <Setter Property="HeightRequest" Value="50"/>
            <Setter Property="VerticalOptions" Value="Center"/>
        </Style>
        <Style x:Key="NavBarImageButtonStyle" TargetType="ImageButton">
            <Setter Property="Aspect" Value="AspectFit"/>
            <Setter Property="BackgroundColor" Value="Transparent"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
    </Application.Resources>
</Application>